
// LOAD

LOAD_TRA ~TTtran/translations/%LANGUAGE%/Install.tra~

// Journal

ACTION_IF GAME_IS ~bg2ee eet~ THEN BEGIN
  ADD_JOURNAL @0 @1 USING ~TTtran\translations\%LANGUAGE%\JournalEntries.TRA~
END

ACTION_IF GAME_IS ~SOA TOB BGT~ THEN BEGIN
LOAD_TRA ~TTtran/translations/%LANGUAGE%/install.tra~
END

// AREAS

COPY ~TTtran/areas~ ~override~

ACTION_IF GAME_IS ~BG2EE EET~ THEN BEGIN
  COPY ~TTtran/tis+pvrz~ ~override~
 END ELSE BEGIN
  COPY ~TTtran/tis~ ~override~
END

COPY_EXISTING ~TTAR0001.are~ ~override~
SAY 0x267c @6000 /* The Kae Castle */

ACTION_IF NOT (ENGINE_IS ~bgee bg2ee eet~) BEGIN
  COPY_EXISTING ttar0001.tis override
END


// Dialogues

COMPILE ~TTtran/dialogues/ttkae.d~
COMPILE ~TTtran/dialogues/ttvict.d~
COMPILE ~TTtran/dialogues/ttquyen.d~

// SCRIPTS

EXTEND_BOTTOM ~TTAR0001.bcs~  ~TTtran/scripts/TTAR0001.baf~
EXTEND_BOTTOM ~AR0702.bcs~ 		~TTtran/scripts/AR0702.baf~
EXTEND_BOTTOM ~BALDUR.bcs~   	~TTtran/scripts/JournalEntries.baf~

// Creatures

COPY ~TTtran/creatures/TTKAE.CRE~ ~override~
SAY NAME1 @5000
SAY NAME2 @5000

COPY ~TTtran/creatures/TTQUYEN.CRE~ ~override~
SAY NAME1 @5001
SAY NAME2 @5001

COPY ~TTtran/creatures/TTVICT.CRE~ ~override~
SAY NAME1 @5002
SAY NAME2 @5002

